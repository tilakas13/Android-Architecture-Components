<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidArchitectureComponents" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title_splash">
        <item name="fontFamily">android:fontFamily="@font/antic"</item>
        <item name="android:textSize">@dimen/text_size_splash</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>
    <style name="title_list">
        <item name="fontFamily">android:fontFamily="@font/antic"</item>
        <item name="android:textSize">@dimen/text_size_list</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="title_bold">
        <item name="fontFamily">android:fontFamily="@font/antic"</item>
        <item name="android:textSize">@dimen/text_size_detail_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail">
        <item name="fontFamily">android:fontFamily="@font/antic"</item>
        <item name="android:textSize">@dimen/text_size_detail_content</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>