<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_card_item">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_card_view"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/container_item_anime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_anime"
                style="@style/title_bold"
                android:layout_width="@dimen/width_image_list"
                android:layout_height="@dimen/width_image_list"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_item_desc"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/title"
                style="@style/title_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image_anime" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>